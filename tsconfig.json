// Base config
{
    "compilerOptions": {
        // Projects
        "incremental": true,
        // Modules
        "moduleResolution": "node",
        // Emit
        "sourceMap": true,
        // Interop Constraints
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        // Type Checking
        "strict": true,
        "noFallthroughCasesInSwitch": true,
    }
}